<div class="container">
  <div class="row">
  <%= @cocktail.name %>
  <ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
  <%= dose.ingredient.name %> : <%= dose.description %>
    <%= link_to "Delete", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
  </ul>
  </div>
  <div class="row">
  <%= link_to "All cocktails", cocktails_path %>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
  </div>
</div>
