<div style="margin-bottom:20px;">
<%= render 'shared/banner-xs' %>
</div>
<div class="container">
  <div class="row show" class="">
  <h1> <%= @cocktail.name %> </h1>
  <ul class="list">
  <% @cocktail.doses.each do |dose| %>
  <li>
  <%= dose.ingredient.name %> : <%= dose.description %>
    <%= link_to " ", dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" }, class:"glyphicon glyphicon-trash" %>
  </li>
  <% end %>
  </ul>
  <div style="margin-bottom:30px;"></div>
  <%= link_to "All cocktails", cocktails_path, class:"btn btn-primary" %>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class:"btn btn-primary" %>
  </div>
</div>
