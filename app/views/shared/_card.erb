<div class="card">
  <div class="card-category">Cocktail</div>
  <div class="card-description">
    <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
  <ul>
    <% cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> <%= dose.ingredient.name %> </li>
    <% end %>
  </ul>
  </div>
  <%= image_tag "logo2.png", alt: "Le Wagon", class:"card-user"%>
  <a class="card-link" href="<%= cocktail_path(cocktail) %>" ></a>
</div>
